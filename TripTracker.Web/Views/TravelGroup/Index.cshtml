@model IEnumerable<TravelGroupDto>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Travel Groups</h2>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-square-fill"></i> Create New Group</a>
    </div>

    <div class="row">
        <div class="col-lg-12 mx-auto">
            <table class="table table-striped table-responsive">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Place</th>
                        <th class="hide-on-mobile">Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model)
                    {
                        <tr>
                            <td>@group.Name</td>
                            <td style="word-break:break-word;">@group.Place</td>
                            <td class="hide-on-mobile">@group.Description</td>
                            <td class="d-flex justify-content-start gap-2 flex-wrap">
                                <a asp-action="Details" asp-route-id="@group.Id" class="btn btn-info btn-sm d-flex align-items-center">
                                    <i class="bi bi-info-square-fill"></i>
                                    <span class="ms-1 hide-on-mobile">Details</span>
                                </a>

                                <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-warning btn-sm d-flex align-items-center">
                                    <i class="bi bi-pencil-square"></i>
                                    <span class="ms-1 hide-on-mobile">Edit</span>
                                </a>

                                <a asp-action="Delete" asp-route-id="@group.Id" class="btn btn-danger btn-sm d-flex align-items-center">
                                    <i class="bi bi-trash-fill"></i>
                                    <span class="ms-1 hide-on-mobile">Delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


