@model IEnumerable<TravelGroupDto>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Travel Groups</h2>
        <a asp-action="Create" class="btn btn-success">+ Create New Group</a>
    </div>

    <div class="row">
        <div class="col-lg-12 mx-auto">
            <table class="table table-striped table-responsive">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Place</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var group in Model)
                    {
                        <tr>
                            <td>@group.Id</td>
                            <td>@group.Name</td>
                            <td>@group.Place</td>
                            <td>@group.Description</td>
                            <td>
                                <a href="@Url.Action("Details", "TravelGroup", new { id = group.Id })" class="btn btn-info btn-sm">Details</a>
                                <a href="@Url.Action("Edit", "TravelGroup", new { id = group.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("Delete", "TravelGroup", new { id = group.Id })" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>