@model TravelGroupDto

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <h2 class="text-center">Edit Travel Group</h2>

            <form asp-action="Edit" method="post" class="mt-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" /> 

                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" required>
                    <div class="text-danger" asp-validation-for="Name"></div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Place</label>
                    <input asp-for="Place" class="form-control" required>
                    <div class="text-danger" asp-validation-for="Place"></div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <div class="text-danger" asp-validation-for="Description"></div>
                </div>
                               
                <button type="submit" class="btn btn-warning w-100">Update</button>
            </form>

            <a asp-action="Index" class="btn btn-secondary mt-3 w-100">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}