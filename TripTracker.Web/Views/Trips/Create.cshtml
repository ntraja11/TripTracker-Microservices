@model TripDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Create New Trip</h2>
        <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Trip Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter trip name" required>
                        <div class="text-danger" asp-validation-for="Name"></div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" required>
                        <div class="text-danger" asp-validation-for="StartDate"></div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">From</label>
                        <input asp-for="From" class="form-control" placeholder="Start location" required>
                        <div class="text-danger" asp-validation-for="From"></div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">To</label>
                        <input asp-for="To" class="form-control" placeholder="Destination" required>
                        <div class="text-danger" asp-validation-for="To"></div>
                    </div>                    
                                        
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter trip details"></textarea>
                        <div class="text-danger" asp-validation-for="Description"></div>
                    </div>
                    
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success px-4">Create Trip</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}