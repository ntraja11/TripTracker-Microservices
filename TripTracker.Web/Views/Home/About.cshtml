@{
    ViewData["Title"] = "About TripTracker";
}

<div class="container py-5 text-light">

    <!-- 🚀 Hero Section: Bold & Engaging -->
    <header class="hero-section text-center py-5 bg-primary text-light">
        <div class="container">
            <h1 class="display-3 fw-bold">Welcome to TripTracker</h1>
            <p class="lead">A revolutionary **Microservices-powered** expense tracker built for seamless group travel management.</p>
            <a asp-controller="Trips" asp-action="Index" class="btn btn-lg btn-warning fw-bold mt-3">Explore the App 🚀</a>
        </div>
    </header>

    <!-- 🌟 Project Highlights -->
    <section class="my-5 text-center">
        <h2 class="fw-bold text-warning">🚀 What Makes TripTracker Unique?</h2>
        <p>Developed using a **modern, scalable tech stack**, TripTracker delivers real-time expense tracking with complete transparency.</p>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="feature-box p-4 border border-secondary shadow-lg rounded bg-dark text-light">
                    <i class="bi bi-cloud-check display-3 text-info"></i>
                    <h4 class="fw-bold mt-3">☁ Hosted on Azure</h4>
                    <p>Deployed using **Azure SQL Database** & **Azure App Service** for optimized cloud performance.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box p-4 border border-secondary shadow-lg rounded bg-dark text-light">
                    <i class="bi bi-cpu display-3 text-success"></i>
                    <h4 class="fw-bold mt-3">⚙ Microservices Architecture</h4>
                    <p>Built with **ASP.NET Core** & **Ocelot API Gateway**, ensuring efficient routing & communication between services.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box p-4 border border-secondary shadow-lg rounded bg-dark text-light">
                    <i class="bi bi-lock-fill display-3 text-danger"></i>
                    <h4 class="fw-bold mt-3">🔒 Secure & Scalable</h4>
                    <p>Integrates **JWT authentication** & robust API security for seamless user management.</p>
                </div>
            </div>
        </div>
    </section>

    

    <!-- 🎯 Personal Statement -->
    <section class="my-5 text-center">
        <h2 class="fw-bold text-warning">🔹 My Technical Expertise</h2>
        <p class="lead">Skills I mastered while developing TripTracker.</p>

        <div class="row skills mt-4">
            <div class="col-md-4">
                <div class="card border border-warning bg-dark text-light p-4 rounded">
                    <i class="bi bi-code-slash display-4 text-warning"></i>
                    <h5 class="fw-bold mt-3">Backend</h5>
                    <p>.NET Core, ASP.NET Web API, Entity Framework Core, JWT Authentication.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border border-success bg-dark text-light p-4 rounded">
                    <i class="bi bi-globe display-4 text-success"></i>
                    <h5 class="fw-bold mt-3">Frontend</h5>
                    <p>.NET MVC Views, Bootstrap and JavaScript.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border border-danger bg-dark text-light p-4 rounded">
                    <i class="bi bi-cloud-check display-4 text-danger"></i>
                    <h5 class="fw-bold mt-3">Cloud</h5>
                    <p>Azure App Service, Azure SQL database and Github version control</p>
                </div>
            </div>
        </div>
    </section>

    <!-- 🎬 Final CTA -->
    <section class="text-center mt-5">
        <h2 class="fw-bold text-light">Want to experience TripTracker?</h2>
        <p class="lead">Explore the app and see how a **modern microservices application** works in action.</p>
        <a asp-controller="Trips" asp-action="Index" class="btn btn-lg btn-warning fw-bold">Start Exploring 🚀</a>
    </section>

</div>