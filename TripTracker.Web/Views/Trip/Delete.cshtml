@model TripDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Delete Trip</h2>
        <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body text-center">
            <h5 class="text-danger">Are you sure you want to delete this trip?</h5>
            <p class="fw-bold">@Model.Name</p>
            <p>@Model.From → @Model.To</p>
            <p>Start Date: @Model.StartDate?.ToString("yyyy-MM-dd")</p>
            <p>End Date: @Model.EndDate?.ToString("yyyy-MM-dd")</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id">
                <button type="submit" class="btn btn-danger px-4">Delete Trip</button>
                <a asp-action="Index" class="btn btn-outline-dark px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>