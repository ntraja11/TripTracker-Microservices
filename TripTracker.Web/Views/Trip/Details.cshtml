@model TripDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Trip Details</h2>
        <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">Trip Name</h5>
                    <p>@Model.Name</p>
                </div>

                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">Status</h5>
                    <p>@Model.Status</p>
                </div>

                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">From</h5>
                    <p>@Model.From</p>
                </div>

                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">To</h5>
                    <p>@Model.To</p>
                </div>

                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">Start Date</h5>
                    <p>@Model.StartDate?.ToString("yyyy-MM-dd")</p>
                </div>

                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">End Date</h5>
                    <p>@Model.EndDate?.ToString("yyyy-MM-dd")</p>
                </div>

                <div class="col-md-12">
                    <hr>
                </div>
                
                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">Total Expense</h5>
                    <p>@Model.TotalExpense?.ToString("C")</p>
                </div>

                <div class="col-md-6 mb-2">
                    <h5 class="fw-bold">Notes</h5>
                    <p>@Model.Notes</p>
                </div>

                <div class="col-md-12 mb-2">
                    <h5 class="fw-bold">Description</h5>
                    <p>@Model.Description</p>
                </div>

                <div class="col-md-12">
                    <hr>
                </div>

                <div class="col-md-12 mb-2">
                    <h5 class="fw-bold">Participants</h5>
                    <ul class="ps-3">
                        @if (Model.ParticipantIds != null && Model.ParticipantIds.Any())
                        {
                            foreach (var participant in Model.ParticipantIds)
                            {
                                <li>@participant</li>
                            }
                        }
                        else
                        {
                            <li class="text-muted">No participants added yet.</li>
                        }
                    </ul>
                </div>

                <div class="col-md-12 mb-2">
                    <h5 class="fw-bold">Expenses</h5>
                    <ul class="ps-3">
                        @if (Model.ExpenseIds != null && Model.ExpenseIds.Any())
                        {
                            foreach (var expense in Model.ExpenseIds)
                            {
                                <li>@expense</li>
                            }
                        }
                        else
                        {
                            <li class="text-muted">No expenses recorded yet.</li>
                        }
                    </ul>
                </div>

                <div class="col-md-12 text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">Edit Trip</a>
                </div>
            </div>
        </div>
    </div>
</div>