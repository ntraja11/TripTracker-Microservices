@model ExpenseDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Edit Expense</h2>
        <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Expense Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter expense name" required>
                        <div class="text-danger" asp-validation-for="Name"></div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Amount</label>
                        <input asp-for="Amount" type="number" class="form-control" step="0.01" placeholder="Enter amount" required>
                        <div class="text-danger" asp-validation-for="Amount"></div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Expense Date</label>
                        <input asp-for="ExpenseDate" type="date" class="form-control">
                        <div class="text-danger" asp-validation-for="ExpenseDate"></div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Participant ID</label>
                        <input asp-for="ParticipantId" class="form-control" placeholder="Enter participant ID" required>
                        <div class="text-danger" asp-validation-for="ParticipantId"></div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Trip ID</label>
                        <input asp-for="TripId" class="form-control" placeholder="Enter trip ID" required>
                        <div class="text-danger" asp-validation-for="TripId"></div>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter details"></textarea>
                        <div class="text-danger" asp-validation-for="Description"></div>
                    </div>

                    <div class="col-md-12 text-center mt-4">
                        <button type="submit" class="btn btn-success px-4">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>