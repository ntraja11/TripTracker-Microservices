@model RegistrationRequestDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Register</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your full name" required>
                            <div class="text-danger" asp-validation-for="Name"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                            <div class="text-danger" asp-validation-for="Email"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required>
                            <div class="text-danger" asp-validation-for="Password"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" type="tel" pattern="\d+" class="form-control" placeholder="Enter your phone number">
                            <div class="text-danger" asp-validation-for="PhoneNumber"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Travel Group Name</label>
                            <input asp-for="TravelGroupName" class="form-control" placeholder="Enter your travel group name">
                            <div class="text-danger" asp-validation-for="TravelGroupName"></div>
                        </div>                         
                        
                        <div class="mb-3 form-check">
                            <input asp-for="IsNewGroup" type="checkbox" class="form-check-input" id="isNewGroupCheckbox">
                            <label class="form-check-label" for="isNewGroupCheckbox">
                                Register new travel group
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Already have an account? <a asp-controller="Auth" asp-action="Login" >Login here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>